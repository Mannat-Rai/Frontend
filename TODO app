            box-shadow: 0 4px 18px rgba(0,0,0,0.1);
        }

        input {
            width: 70%;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        button {
            padding: 10px 14px;
            margin-left: 8px;
            border: none;
            background: #6366f1;
            color: #fff;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
        }

        button:hover {
            background: #4f46e5;
        }

        ul {
            margin-top: 20px;
            padding-left: 0;
        }

        li {
            list-style: none;
            background: #eef1ff;
            padding: 10px;
